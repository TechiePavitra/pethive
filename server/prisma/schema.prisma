// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  picture   String?
  password  String?  // Hashed password
  role      String   @default("customer") // "customer" or "admin"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
  messages  Message[]
  cart      Cart?
}

model Product {
  id          String      @id @default(uuid())
  name        String
  description String
  price       Float
  discount    Float       @default(0)
  isOffer     Boolean     @default(false)
  stock       Int         @default(0)
  images      String      // JSON string of image URLs
  categoryId  String
  category    Category    @relation(fields: [categoryId], references: [id])
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  orderItems  OrderItem[]
}

model Category {
  id        String    @id @default(uuid())
  name      String
  slug      String    @unique
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Order {
  id        String      @id @default(uuid())
  userId    String
  user      User        @relation(fields: [userId], references: [id])
  status    String      @default("pending") // pending, shipped, delivered, returned
  total     Float
  items     OrderItem[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Float
}

model Cart {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  items     String   // JSON string of cart items: [{ productId, quantity }]
  updatedAt DateTime @updatedAt
}

model Message {
  id        String   @id @default(uuid())
  content   String
  userId    String?  // Optional, could be anonymous
  user      User?    @relation(fields: [userId], references: [id])
  isAdmin   Boolean  @default(false) // true if sent by admin
  createdAt DateTime @default(now())
}
